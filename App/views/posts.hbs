<h1>List of posts:</h1>
<table class="styled-table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Published</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.content}}</td>
            <td>{{#if this.published}}
                <form style="all: unset;" action="/posts/{{this._id}}/unpublish" method="POST">
                    <input type="submit" value="Unpublish" />
                </form>
                {{else}}
                <form style="all: unset;" action="/posts/{{this._id}}/publish" method="POST">
                    <input type="submit" value="Publish" />
                </form>
                {{/if}}      
            </td>
            <td>
                <form style="all: unset;" action="/posts/{{this._id}}/delete" method="POST">
                    <input type="submit" value="Delete" />
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
